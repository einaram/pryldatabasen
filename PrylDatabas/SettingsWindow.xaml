<Window x:Class="PrylDatabas.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inställningar" Height="800" Width="700" WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Margin="20">
        <TextBlock Text="Inställningar" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <GroupBox Header="Excel-fil" Margin="0,0,0,20" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Sökväg till Excel-fil:" Margin="0,0,0,5"/>
                    <TextBox x:Name="FilePathBox" Padding="5" Height="30"/>
                </StackPanel>

                <Button x:Name="BrowseButton" Grid.Column="1" Content="Bläddra..." 
                        Click="BrowseButton_Click" Margin="10,0,0,0" Padding="10,5"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Bildmapp" Margin="0,0,0,20" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Sökväg till bildmapp:" Margin="0,0,0,5"/>
                    <TextBox x:Name="ImageFolderPathBox" Padding="5" Height="30"/>
                </StackPanel>

                <Button x:Name="BrowseImageButton" Grid.Column="1" Content="Bläddra..." 
                        Click="BrowseImageButton_Click" Margin="10,0,0,0" Padding="10,5"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Felsökning" Margin="0,0,0,20" Padding="15">
            <StackPanel>
                <CheckBox x:Name="DebugModeCheckBox" Content="Visa debug-information vid bildsökning" 
                          VerticalAlignment="Center" Margin="0,5,0,5"/>
                <TextBlock Text="Visar detaljerad information om hur bilderna söks och vilka som hittas när du öppnar ett föremål." 
                           TextWrapping="Wrap" Foreground="#777777" FontSize="10" Margin="20,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <TextBlock Text="Hur bildsökning fungerar:" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>
        <TextBlock Text="Applikationen söker efter bilder för varje föremål genom att leta efter en mapp som börjar på föremålsnumret och hämta bilder därifrån. Om Excel-filen anger vilka bilder som hör till ett föremål (i &quot;Foton&quot;-kolumnen), användes dessa namn. Annars tas alla bilder i föremålsmappen. Bildnamnen kan vara med eller utan filändelse." 
                   TextWrapping="Wrap" Margin="0,0,0,20" FontSize="11" Foreground="#555555"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="OK" Width="80" Padding="10,5" 
                    Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Avbryt" Width="80" Padding="10,5" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
