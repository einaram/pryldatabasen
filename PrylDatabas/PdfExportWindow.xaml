<Window x:Class="PrylDatabas.PdfExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exportera till PDF" SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="White" Padding="20">
    <StackPanel Orientation="Vertical" MinWidth="400">
        <TextBlock Text="Exportera valda prylar" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Items ListBox (read-only overview) -->
        <TextBlock Text="Prylar som ska exporteras:" Margin="0,0,0,5" FontWeight="SemiBold"/>
        <ListBox x:Name="ItemsListBox" Height="200" Margin="0,0,0,15" 
                 BorderThickness="1" BorderBrush="#CCCCCC" Background="#F5F5F5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Options -->
        <Border BorderThickness="1" BorderBrush="#E0E0E0" Padding="10" Margin="0,0,0,15" Background="#FAFAFA">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Exportinställningar:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <CheckBox x:Name="IncludeImagesCheckBox" Content="Inkludera foton i PDF" 
                         IsChecked="True" FontSize="12" Margin="0,0,0,8"/>
                <CheckBox x:Name="OpenPdfCheckBox" Content="Öppna PDF när klar" 
                         IsChecked="True" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ExportButton" Content="Exportera" Padding="20,8" 
                   Background="#007ACC" Foreground="White" Click="ExportButton_Click"
                   MinWidth="100" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Avbryt" Padding="20,8" 
                   IsCancel="True" MinWidth="100"/>
        </StackPanel>
    </StackPanel>
</Window>

